    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/tld/customtag.tld</taglib-location>
        </taglib>
    </jsp-config>

